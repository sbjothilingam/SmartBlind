<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.project1.MainActivity" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Room Temperature:"
        android:textColor="#b0c4de"
        android:textSize="30sp"
        android:textStyle="bold" />
 
        	<TextView 
            	android:id="@+id/temp_text_indoor"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:textSize="18sp"
            	android:text="Loading...."
        		android:padding="5dp"
        		android:gravity="center"/>
        	
        	<TextView
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:gravity="center"
        	    android:padding="5dp"
        	    android:text="Ambient:"
        	    android:textColor="#b0c4de"
        	    android:textSize="30sp"
        	    android:textStyle="bold" />

        	<TextView
            	android:id="@+id/ambient_text_indoor"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:textSize="18sp"
            	android:text="Loading...."
            	android:padding="5dp"
        		android:gravity="center" />

        	<TextView
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:gravity="center"
        	    android:text="Blind Status:"
        	    android:textColor="#b0c4de"
        	    android:textSize="30sp"
        	    android:textStyle="bold" />

    		<TextView
            	android:id="@+id/blind_text_indoor"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:textSize="18sp"
            	android:text="Loading...."
            	android:padding="5dp"
        		android:gravity="center" />
    		<TextView
            	android:id="@+id/time_updated"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:textSize="18sp"
            	android:text=""
            	android:padding="5dp"
        		android:gravity="center" />

	<Button
	    android:id="@+id/rule"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Rules"
	    android:textColor="#ff0000" />

	<Button
	    android:id="@+id/history"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="History"
	    android:textColor="#4169E1" />

	<Button
	    android:id="@+id/set_difference"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Settings"
	    android:textColor="#4169E1" />

</LinearLayout>
</ScrollView>